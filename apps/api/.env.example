# Server
PORT=3001

# MongoDB
MONGODB_URI=mongodb://localhost:27017/gitstream

# Privy Authentication (get from https://dashboard.privy.io)
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# Yellow Network (Nitrolite state channels for payment streaming)
# Private key for the wallet that will manage state channels
# This wallet holds funds and signs channel state updates
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
YELLOW_PRIVATE_KEY=your_wallet_private_key_here
# Use sandbox (testnet) environment - set to false for production
YELLOW_USE_SANDBOX=true

# Contracts
GITSTREAM_RECEIVER_ADDRESS=
USDC_ADDRESS=

# Chain
CHAIN_ID=84532
RPC_URL=https://sepolia.base.org

# Auth
JWT_SECRET=change-this-in-production

# Frontend (CORS)
# Single URL for local development
FRONTEND_URL=http://localhost:3000
# For production, use comma-separated list to allow multiple origins:
# FRONTEND_URL=https://yourdomain.com,https://www.yourdomain.com
# Note: Vercel preview deployments (*.vercel.app) are automatically allowed
